.env.production.example
# Environment Configuration for LMS Production Deployment

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DATABASE_URL=postgresql://lms_user:lms_password@postgres:5432/lms_db
DB_HOST=postgres
DB_PORT=5432
DB_USER=lms_user
DB_PASSWORD=lms_password
DB_NAME=lms_db

# ==============================================================================
# BACKEND API CONFIGURATION
# ==============================================================================
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
CORS_ORIGINS=["http://localhost:3000","http://your-domain.com","https://your-domain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS","PATCH"]
CORS_ALLOW_HEADERS=["*"]

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ==============================================================================
# EMAIL CONFIGURATION (For notifications)
# ==============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@library-system.com

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================
VITE_API_URL=http://your-domain.com/api
VITE_ENVIRONMENT=production
VITE_LOG_LEVEL=error

# ==============================================================================
# AWS CONFIGURATION (Optional - for future S3 integration)
# ==============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=lms-files

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/opt/lms/backups

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================
ALERT_EMAIL=admin@example.com
HEALTH_CHECK_INTERVAL=60
FAILURE_THRESHOLD=3

# ==============================================================================
# PERFORMANCE CONFIGURATION
# ==============================================================================
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
MAX_DB_CONNECTIONS=20
REQUEST_TIMEOUT=60

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
LOG_DIR=/opt/lms/logs
LOG_FILE_MAX_SIZE=104857600  # 100MB
LOG_FILES_BACKUP_COUNT=10
